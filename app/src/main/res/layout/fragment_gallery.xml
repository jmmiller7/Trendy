<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_primary_color">

    <LinearLayout
        android:layout_gravity="fill_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|fill_horizontal"
            android:layout_weight="1"
            android:id="@+id/tagEditText"
            android:textColor="@color/secondary_text_color"
            android:text="@string/search_query_prompt" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchImageButton"
            android:src="@android:drawable/ic_search_category_default"
            android:background="@color/accent_color" />
    </LinearLayout>

    <com.example.jmmil.trendy.GlideView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/previewGlideView"
        android:layout_weight="2" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/previewLinearLayout1"
        android:layout_weight="1">

        <com.example.jmmil.trendy.GlideView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/glideView1"
            android:layout_weight="1"
            android:layout_margin="@dimen/preview_vertical_margin" />

        <com.example.jmmil.trendy.GlideView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/glideView2"
            android:layout_weight="1"
            android:layout_margin="@dimen/preview_vertical_margin" />

        <com.example.jmmil.trendy.GlideView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/glideView3"
            android:layout_weight="1"
            android:layout_margin="@dimen/preview_vertical_margin" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/previewLinearLayout2"
        android:layout_weight="1">

        <com.example.jmmil.trendy.GlideView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/glideView4"
            android:layout_weight="1"
            android:layout_margin="@dimen/preview_vertical_margin" />

        <com.example.jmmil.trendy.GlideView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/glideView5"
            android:layout_weight="1"
            android:layout_margin="@dimen/preview_vertical_margin" />

        <com.example.jmmil.trendy.GlideView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/glideView6"
            android:layout_weight="1"
            android:layout_margin="@dimen/preview_vertical_margin" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/previewLinearLayout3"
        android:layout_weight="1">

        <com.example.jmmil.trendy.GlideView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/glideView7"
            android:layout_weight="1"
            android:layout_margin="@dimen/preview_vertical_margin" />

        <com.example.jmmil.trendy.GlideView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/glideView8"
            android:layout_weight="1"
            android:layout_margin="@dimen/preview_vertical_margin" />

        <com.example.jmmil.trendy.GlideView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/glideView9"
            android:layout_weight="1"
            android:layout_margin="@dimen/preview_vertical_margin" />
    </LinearLayout>

</LinearLayout>